<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="290dp"
        android:layout_height="217dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_fav_collection_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@color/colorPrimary"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/lay_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_fav_collection_2"/>
        <ImageView
            android:id="@+id/iv_fav_collection_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@color/colorPrimary"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/lay_item"
            app:layout_constraintBottom_toTopOf="@id/iv_fav_collection_3"
            app:layout_constraintLeft_toRightOf="@id/iv_fav_collection_1"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/iv_fav_collection_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@color/colorPrimary"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_fav_collection_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_fav_collection_1"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:id="@+id/lay_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/black_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Amoled Club"
                android:background="@color/black_card"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/black_card"
                tools:text="A common pitch black wallpaper"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>